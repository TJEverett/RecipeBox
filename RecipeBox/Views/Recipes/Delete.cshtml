@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Are you sure you want to delete this recipe?</h2>

<p>Recipe Name: @Html.DisplayFor(model => model.DishName)</p>
<p>Your Star Rating: @Html.DisplayFor(model => model.StarRating)/5</p>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}

@Html.ActionLink("Back to Recipe Box", "Index")